# Parameter Backend Environment Configuration
# Copy this to .env and fill in the values

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/parameter_db

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,.localhost

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Frontend URL (for invitation emails)
SITE_URL=http://localhost:5173

# AI Configuration (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key
AI_MODEL=claude-sonnet-4-20250514
AI_MAX_TOKENS=4096

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@parameter.co.zw

# Task Queue Workers (Django-Q2)
Q_WORKERS=2

# Production-only settings (set in Render dashboard)
# SECURE_SSL_REDIRECT=True
